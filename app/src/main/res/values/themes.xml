<resources>
    <!-- Base application theme. -->
    <style name="Theme.Trans" parent="Theme.Material3.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorUIBrand</item>
        <item name="colorPrimaryDark">@color/colorUIBrand</item>
        <item name="colorAccent">@color/colorUIBrand</item>
    </style>


    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_baseline_adb_24</item>
        <item name="postSplashScreenTheme">@style/Theme.Trans</item>
        <item name="windowSplashScreenBackground">@color/colorUILiteBackground</item>
    </style>
    <style name="TopRoundedCorners" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>
</resources>